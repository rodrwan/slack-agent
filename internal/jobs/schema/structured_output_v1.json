{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "task_summary",
    "key_findings",
    "artifacts",
    "risks",
    "next_steps",
    "full_report_markdown"
  ],
  "properties": {
    "version": {
      "type": "string",
      "minLength": 1
    },
    "task_summary": {
      "type": "string",
      "minLength": 1
    },
    "key_findings": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "path",
          "description"
        ],
        "properties": {
          "path": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "next_steps": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "full_report_markdown": {
      "type": "string",
      "minLength": 1
    }
  }
}
